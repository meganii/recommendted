.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:movies, :index)
      %li=link_to pat(:new), url(:movies, :new)
      %li.active=link_to pat(:edit), url(:movies, :edit, :id => @movie.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:movie)
    .inner
      -form_for :movie, url(:movies, :update, :id => @movie.id), :method => :put, :class => :form do |f|
        =partial "movies/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
